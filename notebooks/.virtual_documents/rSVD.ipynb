def mk_sigma_plots( M=1000, N=100 ):
    A      = np.random.randn(M,N)
    U,S,Vt = np.linalg.svd( A, full_matrices=0)
    S      = np.arange(1,0,- 1./N)
    A      = U @ np.diag(S) @ Vt
    h      = hv.Curve(S, label='original').opts(width=500, title="Singular Values")

    def plot( r, p, oversampling ):
        u,s,vt = rSVD(A,r,p,oversampling)
        return (h*hv.Curve( s, label=f'{p},{oversampling}'))\
               .opts(legend_position='right')

    return A, S, plot

