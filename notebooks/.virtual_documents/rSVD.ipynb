def rSVD( A, r, p, oversampling=5):
    '''randomized SVD of a matrix A
    r:             number of desired singular values (the estimated rank of A)
    p:             integer power to apply to (A A^t)^p A
    oversampling:  number of additional singular values to compute
    '''
    # --------------------------------------------------------------------------
    # Step 1: Compute a random sampling of the column space of  Z = (A A.T)^p A

    P = np.random.randn( A.shape[1],min(r+oversampling, A.shape[1])  )
    Z = A @ P     # sample the column space r+oversampling times
    for k in range(p):      # Sample the column space of (A A.T)^p A:   Z = (A A.T)^p A P
        Z = A @ (A.T @ Z)   # This does not modify the singular vectors
        #                   #      but reduces the relative values of the singular values

    # --------------------------------------------------------------------------
    # Step 2: Let Z = Q R  so col(Q) = col(Z) \approx col(A), and Compute the SVD of  Q.T A
    Q,R = np.linalg.qr(Z, mode='reduced')   #   Z = Q R

    QtA        = Q.T @ A    # QtA and A have the same Sigma and V, U and UQtA are related by U = Q UQtA
    UQtA, S, V = np.linalg.svd( QtA, full_matrices=0)
    U          = Q @ UQtA
    return U, S, V


def plot_rsvd(A, r=1, p=0, oversampling=0, err=False):
    U,S,Vt  = rSVD( A,r,p, oversampling)
    Aapprox =  U @ np.diag(S) @ Vt
    diff    = np.linalg.norm( A - Aapprox )
    if err: h = hv.Raster(abs(A-Aapprox)).opts( xaxis=None,yaxis=None,cmap='gray', title =f'Error: {round(diff,2)}')
    else:   h = hv.Raster(Aapprox).opts( xaxis=None,yaxis=None,cmap='gray', title =f'Error: {round(diff,2)}')
    return h

