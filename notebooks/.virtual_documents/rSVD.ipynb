def sigma_of_powers(X, S=None ):
    U, Sigmas, Vt = np.linalg.svd( X,full_matrices=0 )   # get orthogonal matrices of given size
    if S is not None:   # override the sigma values with a custom vector
        Sigmas = S
    h        = [ hv.Curve(Sigmas/Sigmas[0], label = '0').opts(title='Relative Singular Values of (X X.T)**p X', width=500, logy=False)]

    X        = U @ np.diag(Sigmas) @ Vt
    Y        = X
    for q in range(1,6):
        Y = X @ (X.T @ Y)
        Uq, Sq, VTq = np.linalg.svd(Y, full_matrices=0)
        h.append( hv.Curve(Sq/Sq[0], label = f'{q}') )

    return hv.Overlay(h).opts( legend_position='right')

