# Power Iteration
def approx_p(A, p, n):
    P = np.random.randn( A.shape[1],min(n, A.shape[1])  )
    Ap = A @ P                 # sample the column space r times
    for k in range(p):         # Sample the column space of (A A.T)^p A:   Z = (A A.T)^p A P
        Ap = A @ (A.T @ Ap)    # This does not modify the singular vectors

    # ---------------------------------------------------------------------------
    # Idea 2: pick a set of N orthonormal random vectors in the Column Space
    Q,_ = np.linalg.qr(Ap, mode='reduced')
    #                  Remark: qr can be done one step at a time as we add vectors to A

    # ---------------------------------------------------------------------------
    # Idea 3: If we project the cols of A into the approximate column space of A,
    #         we should get a good approximation of A
    A_approx = Q @ (Q.T @ A )

    diff = np.linalg.norm( A-A_approx )
    return A_approx, diff

def mk_pAapprox_plotter( A ):
    h = hv.Raster( A ).opts(xaxis=None,yaxis=None,cmap='gray', title=f'Original of size: {A.shape}')
    
    def plot_Aapprox( p=0, n=40, err=False ):
        A_approx, diff = approx_p(A, p, n )
        if err: h = hv.Raster( abs(A-A_approx) )
        else:   h = hv.Raster( A_approx        )

        return h.opts( title =f'Error: {round(diff,2)}', xaxis=None,yaxis=None,cmap='gray')
    return h,plot_Aapprox

