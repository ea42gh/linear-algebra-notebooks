def fft_2D(A):
    '''the corresponding library routine is C = np.fft.fft2(A)'''
    B = np.zeros_like(A,dtype='complex')
    for j in range(B.shape[0]):
        B[j,:] = np.fft.fft(A[j,:])
    C = np.zeros_like(B)
    for j in range(C.shape[1]):
        C[:,j] = np.fft.fft(B[:,j])
    return B, C

cat_rowfft, cat_fft = fft_2D( cat )

